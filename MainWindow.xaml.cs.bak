// Code snippet for synchronizing calendar and table selections
// And highlighting current day and events for the next 3 months
private async Task RefreshEventsForNextThreeMonths()
{
    var startDate = DateTime.Today;
    var endDate = startDate.AddMonths(3);
    _monthEvents = await _calendarService.GetEventsAsync(startDate, endDate);
    UpdateCalendarDayButtons();
}

private void UpdateCalendarDayButtons()
{
    foreach (var dayButton in CalendarButtons) // Assuming CalendarButtons is a collection of CalendarDayButton
    {
        var date = dayButton.DataContext as DateTime?;
        if (date.HasValue)
        {
            dayButton.Tag = date.Value == DateTime.Today ? "IsToday" : _monthEvents.Any(e => e.StartTime.Date == date.Value.Date) ? "HasEvents" : null;
        }
    }
}

